<div class="card" style="width: 95%; left: 20px;">
    <div class="card-body" style=" padding-left: 20px;">
        <table class="table table-striped">
            <tr>
                <th>Type</th>
                <th>Content</th>
                <th>
                    <% if(readonly) { %>
                        Submitted By
                    <% } else { %>
                        Actions
                    <% } %>
                </th>
            </tr>
            <% for (var i = 0; i < content.length; i++) { %>
                <tr>
                    <td id="contentType<%= content[i].id %>"><%= content[i].type %></td>
                    <td id="contentText<%= content[i].id %>"><%= content[i].text %></td>

                    <% if(readonly) { %>
                    <td><%= content[i].username %></td>
                    <% } else { %>
                    <td>
                        <button class="btn btn-info" onclick="edit(<%= content[i].id %>)">Edit</button>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                    <% } %>
                    </td>

                </tr>
            <% } %>
        </table>
    </div>
</div>
